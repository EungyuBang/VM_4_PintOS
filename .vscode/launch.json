      "cwd": "${workspaceFolder}/pintos/userprog",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:1234"
    },
    {
      "name": "Pintos Debug (VM)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/pintos/vm/build/kernel.o",
      "cwd": "${workspaceFolder}/pintos/vm",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:1234"
    }
  ]
